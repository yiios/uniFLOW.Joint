@model UserViewModel

@{
    ViewData["Title"] = "用户认证";
}

<h2>用户认证</h2>

<form method="post" class="form-horizontal">

    <div class="form-group">
        <label class="col-xs-3 col-sm-2 control-label" asp-for="UserName"></label>
        <div class="col-xs-9 col-sm-10">
            <input asp-for="UserName" class="form-control" value="@Model?.UserName" placeholder="@Html.DisplayNameFor(m => m.UserName)" />
            <div class="text-warning"> *如果用户名和您的企业微信的帐号不一致，可能导致之前提交的文件无法打印。</div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-3 col-sm-2 control-label" asp-for="Password"></label>
        <div class="col-xs-9 col-sm-10">
            <input asp-for="Password" class="form-control" autocomplete="off" placeholder="@Html.DisplayNameFor(m => m.Password)" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-3 col-sm-2"></label>
        <div class="col-xs-9 col-sm-10" style="color:red"> <div asp-validation-summary="All" class="text-danger"></div></div>
    </div>
    <div class="form-group">
        <label class="col-xs-3 col-sm-2"></label>
        <div class="col-xs-9 col-sm-10">
            <button type="submit" class="btn btn-danger">提交</button>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
