@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using UniFlowGW.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "管理员登录";
}

<div style="margin-top:20px">&nbsp;</div>
<h2 class="text-center">@ViewData["Title"]</h2>
<div class="container-fluid">
    <div class="col-md-offset-4 col-md-4">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.UserName)" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" autocomplete="off" placeholder="@Html.DisplayNameFor(m => m.Password)" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block btn-lg">登 录</button>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
